".loadingWindow": {
	top: 0,
	left: 0,
	right: 0,
	bottom: 0,
	zIndex: 9999,
	visible: false
}

".loadingWindow[platform=android]":{
	elevation: 9999
}

".alertTransparentBackground":{
	top: 0,
	backgroundColor: '#000',
	width: Alloy.Globals.Device.width,
	height: Alloy.Globals.Device.height,
	opacity: 0
}

".alertView":{
	backgroundColor: '#fff',
	width: 80,
	height: 80,
	zIndex: 999,
	borderRadius: 10
}

".loadingImages": {
	width: Titanium.UI.FILL,
	duration: 60
}